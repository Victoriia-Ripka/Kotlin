<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="serif"
            android:text="Завдання 1"
            android:textColor="#1D1C1C"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Мобільний калькулятор розрахунку прибутку від сонячних електростанцій з встановленою системою прогнозування сонячної потужності."
            android:textColor="#1D1C1C"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/desc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Введіть середньодобову потужність (МВт)"
            android:textColor="#1D1C1C"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/Pc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textColor="#1D1C1C"
            android:textColorHint="#AFAFAF" />

        <TextView
            android:id="@+id/error_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#F44336" />

        <TextView
            android:id="@+id/desc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Введіть середньоквадратичне відхилення (МВт)"
            android:textColor="#1D1C1C"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/sigma"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textColor="#1D1C1C"
            android:textColorHint="#AFAFAF" />

        <TextView
            android:id="@+id/error_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#F44336" />

        <TextView
            android:id="@+id/desc3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Введіть вартість електроенергії (грн/кВт * год)"
            android:textColor="#1D1C1C"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/B"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textColor="#1D1C1C"
            android:textColorHint="#AFAFAF" />

        <TextView
            android:id="@+id/error_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#F44336" />

        <Button
            android:id="@+id/do_calculations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#0073e6"
            android:text="Обчислити"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#3F51B5"
            android:text="Очистити"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/profit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#1D1C1C"
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>